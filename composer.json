    "type": "project",
    "authors": [
        {
            "name": "Kevin Sebastian Moscoso Bacuilima",
            "email": "kevin.moscoso.18@est.ucacue.edu.ec"
        }
    ],
    "autoload": {
        "psr-4": {
            "MoscosoSamaniego\\ErpIa\\": "src/"
        }
